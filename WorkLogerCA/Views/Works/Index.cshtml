@model IEnumerable<WorkLogerCA.Models.Work>

@{
    ViewData["Title"] = "Выполненные работы";
}

<hr /> 
<form>
  <div class="row">
	  <h2>Поиск выполненных работ:</h2>
	<div class="col-md-10">
	  <input type="text" class="form-control" name="search" placeholder="Введите данные транспортного средтсва">
	</div>
	<div class="col-md-2">
	  <button class="btn btn-success right" type="submit" style="width: 100%">Найти запись</button>
	</div>
  </div>
</form> 
<hr />
<h1>Выполненые работы</h1>

<p>
    <a asp-action="Create" class="btn btn-warning">Добавить запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreationDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerformersOfWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionOfPerformedWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceOfWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkCompletiting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transport)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerformersOfWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionOfPerformedWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkCompletiting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport.Destination)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" style="width: 100%">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning mt-1" style="width: 100%">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
<form method="post">
    <input type="submit" class="btn btn-primary mt-3" name="ExcelExport" value="Экспорт Excel" style="width: 30%">
</form>