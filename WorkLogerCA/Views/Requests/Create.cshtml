@model WorkLogerCA.Models.Request

@{
    ViewData["Title"] = "Create";
}

<h1>Заявки</h1>

<h4>Добавить заявку в систему</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreationDateTime" class="control-label"></label>
                <input asp-for="CreationDateTime" class="form-control" />
                <span asp-validation-for="CreationDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestNumber" class="control-label"></label>
                <input asp-for="RequestNumber" class="form-control" />
                <span asp-validation-for="RequestNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDateTime" class="control-label"></label>
                <input asp-for="RequestDateTime" class="form-control" />
                <span asp-validation-for="RequestDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberDrillingCrew" class="control-label"></label>
                <input asp-for="NumberDrillingCrew" class="form-control" />
                <span asp-validation-for="NumberDrillingCrew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDescription" class="control-label"></label>
                <input asp-for="RequestDescription" class="form-control" />
                <span asp-validation-for="RequestDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfWork" class="control-label"></label>
                <input asp-for="PlaceOfWork" class="form-control" />
                <span asp-validation-for="PlaceOfWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SendResult" /> @Html.DisplayNameFor(model => model.SendResult)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RepeatedRequest" class="control-label"></label>
                <input asp-for="RepeatedRequest" class="form-control" />
                <span asp-validation-for="RepeatedRequest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeSendRequest" class="control-label"></label>
                <input asp-for="DateTimeSendRequest" class="form-control" />
                <span asp-validation-for="DateTimeSendRequest" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CompletedRequest" /> @Html.DisplayNameFor(model => model.CompletedRequest)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ContractorNote" class="control-label"></label>
                <input asp-for="ContractorNote" class="form-control" />
                <span asp-validation-for="ContractorNote" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequestState" /> @Html.DisplayNameFor(model => model.RequestState)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success mt-3">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
